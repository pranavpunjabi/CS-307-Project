<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:id="@+id/profilePicture"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="44dp"
        android:src="#ffffec61" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NAME"
        android:id="@+id/name"
        android:layout_alignTop="@+id/profilePicture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/profilePicture"
        android:layout_toEndOf="@+id/profilePicture"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AGE"
        android:id="@+id/age"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/profilePicture"
        android:gravity="center_horizontal"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MAJOR"
        android:id="@+id/major"
        android:layout_below="@+id/age"
        android:layout_toRightOf="@+id/profilePicture"
        android:gravity="center_horizontal"
        android:layout_alignRight="@+id/age"
        android:layout_alignEnd="@+id/age" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CLASSIFICATION"
        android:id="@+id/classification"
        android:layout_below="@+id/major"
        android:layout_toRightOf="@+id/profilePicture"
        android:gravity="center_horizontal"
        android:layout_alignRight="@+id/major"
        android:layout_alignEnd="@+id/major" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SWITCH TO TUTOR"
        android:id="@+id/toggle"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/profilePicture"
        android:layout_alignStart="@+id/profilePicture" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT YOUR INFO"
        android:id="@+id/editInfo"
        android:layout_alignTop="@+id/toggle"
        android:layout_toRightOf="@+id/toggle"
        android:layout_toEndOf="@+id/toggle" />

</RelativeLayout>