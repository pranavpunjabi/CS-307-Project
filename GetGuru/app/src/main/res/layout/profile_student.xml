<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:id="@+id/profilePictureStudent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="44dp"
        android:src="#ffffec61" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NAME"
        android:id="@+id/nameStudent"
        android:layout_alignTop="@+id/profilePictureStudent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/profilePictureStudent"
        android:layout_toEndOf="@+id/profilePictureStudent"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AGE"
        android:id="@+id/ageStudent"
        android:layout_below="@+id/nameStudent"
        android:layout_toRightOf="@+id/profilePictureStudent"
        android:gravity="center_horizontal"
        android:layout_alignRight="@+id/nameStudent"
        android:layout_alignEnd="@+id/nameStudent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MAJOR"
        android:id="@+id/education"
        android:layout_below="@+id/ageStudent"
        android:layout_toRightOf="@+id/profilePictureStudent"
        android:gravity="center_horizontal"
        android:layout_alignRight="@+id/ageStudent"
        android:layout_alignEnd="@+id/ageStudent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CLASSIFICATION"
        android:id="@+id/classification"
        android:layout_below="@+id/education"
        android:layout_toRightOf="@+id/profilePictureStudent"
        android:gravity="center_horizontal"
        android:layout_alignRight="@+id/education"
        android:layout_alignEnd="@+id/education" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SWITCH TO TUTOR"
        android:id="@+id/toggle2"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/profilePictureStudent"
        android:layout_alignStart="@+id/profilePictureStudent" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT YOUR INFO"
        android:id="@+id/editInfo2"
        android:layout_alignTop="@+id/toggle2"
        android:layout_toRightOf="@+id/toggle2"
        android:layout_toEndOf="@+id/toggle2" />

</RelativeLayout>